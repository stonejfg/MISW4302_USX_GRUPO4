    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.clima.ClimaFragment"
    android:background="@drawable/fondo">

    <!--<TextView
        android:id="@+id/text_titulo_fragment_clima"
        android:layout_width="match_parent"
